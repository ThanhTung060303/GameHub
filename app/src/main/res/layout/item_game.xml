<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UserActivity">

    <LinearLayout
        android:background="#2b2b2b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#444242">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/avt" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="16dp">
                <TextView
                    android:id="@+id/tvAdminTengame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cyberpunk"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAdminLoaigame"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="role-playing"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAdminNph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CD PROJEKT RED"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAdminGiaban"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="990.000Ä‘"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/ic_update" />

                    <ImageView
                        android:id="@+id/ivXoa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
